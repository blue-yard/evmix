{
  "name": "@evmix/host",
  "version": "0.1.0",
  "description": "EVMIX Host - In-memory host implementation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
